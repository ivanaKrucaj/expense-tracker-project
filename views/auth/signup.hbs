<form method="POST" action="/signup">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" placeholder="Randy Marsh">
    <label for="user-email">Email</label>
    <input type="email" name="email" id="user-email" placeholder="iamlorde@yahoo.com">
    <label for="user-pass">Password</label>
    <input type="password" name="password" id="user-pass" placeholder="*******">
    <label for="currency" >Currency</label>
    <select name="currency" id="currency" placeholder="Select currency">
        <option value="EUR">EUR €</option>
        <option value="GBP">GBP £</option>
        <option value="USD">USD $</option>
        <option value="YEN">YEN ¥</option>
        <option value="CHF">CHF</option>
        <option value="INR">INR ₹</option>
    </select>
    <button type="submit">Sign Up</button>
</form>

{{#if errorMessage}}
<div class="error">{{errorMessage}}</div>
{{/if}}