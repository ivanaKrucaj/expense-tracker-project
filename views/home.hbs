<link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@300;400;700;800&display=swap"
    rel="stylesheet">
{{!-- Font Awesome Icons --}}
<script src="https://kit.fontawesome.com/a337f7a40e.js" crossorigin="anonymous"></script>


<div class="intro">
    <h3 class="user-greeting">Hello {{upperCaseName}}</h3>
    <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt fa-2x fontawesome"></i></a>
</div>


{{!-- Current balance --}}
<div class="current-balance">
    <h2>{{currency}}</h2>
    <small>Current balance</small>
</div>


{{!-- Filter --}}

        <form action="/home" method="GET">
            <select id="inputType" class="form-control" name="type">
                <option>Select type</option>
                <option value="income">Income</option>
                <option value="expense">Expense</option>
            </select>
            <select id="inputCategory" class="form-control" name="category">
                <option>Select category</option>
                <option value="food">Food</option>
                <option value="transport">Transport</option>
                <option value="accommodation">Accommodation</option>
                <option value="salary">Salary</option>
                <option value="travel">Travel</option>
                <option value="bills">Bills</option>
                <option value="entertainment">Entertainment</option>
                <option value="clothing">Clothing</option>
                <option value="education">Education</option>
                <option value="healthcare">Healthcare</option>
            </select>
            {{!-- <input type="date" class="form-control"> --}}
            <button type="submit" class="btn btn-primary btn-block">Search</button>
        </form>

        <form action="/home" method="GET">
            <button type="submit" class="btn btn-primary btn-block">Reset</button>
        </form>


{{!-- Transactions--}}
<h4 class="trans-title">Earlier this month</h4>
<div>
    {{#each reverseTrans}}
    {{#if this.isExpenseType}}
    <div class="trans-display">
        <div class="center">
            <div class="red-bg row">
                <div class="col-6">
                    <p>{{this.name}}</p>
                    <small>{{this.date}}</small>
                </div>
                <div class="col-3">
                    <a href="/editTrans/{{this._id}}"><i class="fas fa-edit fontawesome"></i></a>
                    <a href="/home/delete/{{this._id}}"><i class="fas fa-trash-alt fontawesome"></i></a>
                </div>
                <div class="col-3 card-amount">
                    <p>- {{this.amount}}</p>
                </div>
            </div>
        </div>

        {{else}}
        <div class="center">
            <div class="blue-bg row">
                <div class="col-6">
                    <p>{{this.name}}</p>
                    <small>{{this.date}}</small>
                </div>
                <div class="col-3">
                    <a href="/editTrans/{{this._id}}"><i class="fas fa-edit fontawesome"></i></a>
                    <a href="/home/delete/{{this._id}}"><i class="fas fa-trash-alt fontawesome"></i></a>
                </div>
                <div class="col-3 card-amount">
                    <p>+ {{this.amount}}</p>
                </div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
    {{!-- <div class="create-btn col-2">
        <a href="/createTrans"><i class="fas fa-plus-circle fa-3x fontawesome"></i></a>
    </div> --}}

</div>

